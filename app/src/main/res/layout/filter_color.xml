<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="25dp"
    android:paddingBottom="25dp"
    android:orientation="vertical"
    android:background="@drawable/popupborder">


    <RadioGroup
        android:id="@+id/filterColorSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Black" />

        <RadioButton
            android:id="@+id/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="White" />

        <RadioButton
            android:id="@+id/colorPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Purple" />

        <RadioButton
            android:id="@+id/colorViolet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Violet" />

        <RadioButton
            android:id="@+id/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Red" />

        <RadioButton
            android:id="@+id/colorPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Pink" />

        <RadioButton
            android:id="@+id/colorOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Orange" />

        <RadioButton
            android:id="@+id/colorYellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Yellow" />
        <RadioButton
            android:id="@+id/colorGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Green" />
        <RadioButton
            android:id="@+id/colorBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            style="@style/radioTitle"
            android:text="Blue" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Ok"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:text="Cancel"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>